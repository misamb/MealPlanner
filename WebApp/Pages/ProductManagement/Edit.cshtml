@page
@model WebApp.Pages.ProductManagement.EditModel

<h1>Edit</h1>

<h4>@Model.UserProduct.Product!.ProductName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                
                <label asp-for="UserProduct.ProductAmount" class="control-label"></label>
                <input asp-for="UserProduct.ProductAmount" class="form-control" />
                <span asp-validation-for="UserProduct.ProductAmount" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="UserProduct.Id" />
            <input type="hidden" asp-for="UserProduct.UserId" />
            <input type="hidden" asp-for="UserProduct.ProductId" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
