@page
@model WebApp.Pages_Recipes.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Recipe</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.RecipeName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.RecipeName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.ServingSize)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.ServingSize)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.RecipeDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.RecipeDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.TimeToServe)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.TimeToServe)
        </dd>
    </dl>
    @foreach (var rp in @Model.RecipeProducts!)
    {
        <div>@rp.Product!.ProductName @rp.ProductAmount @rp.Product.ProductMeasurment</div>
    }
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Recipe.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
